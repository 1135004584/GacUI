<Resource>
  <Instance name="MainWindowResource">
    <Instance ref.Class="demo::MainWindow" xmlns:demo="demo::*">
      <ref.Members>
        <![CDATA[
          {
            @cpp:Private
            event LevelUpdated();
          }
        ]]>
      </ref.Members>
      <Window ref.Name="self" Text="GacUI XML资源临时测试" ClientSize="x:640 y:480">
        <att.BoundsComposition-set PreferredMinSize="x:640 y:480"/>
        <Table AlignmentToParent="left:0 top:0 right:0 bottom:0" CellSpan="5">
          <att.Rows>
            <_>composeType:MinSize</_>
            <_>composeType:MinSize</_>
            <_>composeType:MinSize</_>
            <_>composeType:MinSize</_>
            <_>composeType:Percentage percentage:1.0</_>
          </att.Rows>
          <att.Columns>
            <_>composeType:Percentage percentage:1.0</_>
            <_>composeType:MinSize</_>
          </att.Columns>

          <Cell Site="row:0 column:0 rowSpan:5">
            <ResponsiveView>
              <att.Views>
                <ResponsiveFixed>
                  <Label Text="Pen Pineapple Apple Pen"/>
                </ResponsiveFixed>
                <ResponsiveFixed>
                  <Label Text="Pineapple Pen"/>
                </ResponsiveFixed>
                <ResponsiveFixed>
                  <Label Text="Apple"/>
                </ResponsiveFixed>
                <ResponsiveFixed>
                  <Label Text="Pen"/>
                </ResponsiveFixed>
              </att.Views>
            </ResponsiveView>
          </Cell>

          <Cell Site="row:0 column:1">
            <Button Text="LevelUp();">
              <ev.Clicked-eval>
                <![CDATA[
                  {
                  }
                ]]>
              </ev.Clicked-eval>
            </Button>
          </Cell>

          <Cell Site="row:1 column:1">
            <Button Text="LevelDown();">
              <ev.Clicked-eval>
                <![CDATA[
                  {
                  }
                ]]>
              </ev.Clicked-eval>
            </Button>
          </Cell>

          <Cell Site="row:2 column:1">
            <Label Text-bind="$'LevelCount: $(self.observe as _(responsive.LevelCount on _.Levelupdated))'"/>
          </Cell>

          <Cell Site="row:3 column:1">
            <Label Text-bind="$'CurrentLevel: $(self.observe as _(responsive.CurrentLevel on _.Levelupdated))'"/>
          </Cell>
        </Table>
      </Window>
    </Instance>
  </Instance>
</Resource>