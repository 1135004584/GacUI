<Resource>
  <Instance name="MainWindowResource">
    <Instance ref.CodeBehind="false" ref.Class="demo::MainWindow">
      <Window ref.Name="self" Text="Ribbon" ClientSize="x:640 y:480">
        <RibbonTab>
          <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:-1" PreferredMinSize="y:200"/>
          <att.BeforeHeaders-set>
            <Button Text="BeforeHeaders">
              <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0" PreferredMinSize="x:120"/>
            </Button>
          </att.BeforeHeaders-set>
          <att.AfterHeaders-set>
            <Button Text="AfterHeaders">
              <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0" PreferredMinSize="x:120"/>
            </Button>
          </att.AfterHeaders-set>

          <att.Pages>
            <RibbonTabPage Text="Controls">
            </RibbonTabPage>
            <RibbonTabPage Text="Highlighted" Highlighted="true">
            </RibbonTabPage>
          </att.Pages>
        </RibbonTab>
      </Window>
    </Instance>
  </Instance>

  <Folder name="DarkSkin">
    <Instance name="DarkSkinThemeResource">
      <Instance ref.CodeBehind="false" ref.Class="darkskin::RibbonTheme" xmlns:x="darkskin::*">
        <ThemeTemplates>
          <att.RibbonGroup>x:RibbonGroupTemplate</att.RibbonGroup>
        </ThemeTemplates>
      </Instance>
    </Instance>
    <InstanceStyle name="Style" content="File">../../Host/Resources/DarkSkin/Style.xml</InstanceStyle>

    <Instance name="RibbonGroupTemplateResource">
      <Instance ref.CodeBehind="false" ref.Class="darkskin::RibbonGroupTemplate" ref.Styles="res://DarkSkin/Style">
        <RibbonGroupTemplate ref.Name="self" ContainerComposition-ref="container" MinSizeLimitation="LimitToElementAndChildren">
          <SolidBorder Color="#3F3F46"/>
          <Table AlignmentToParent="left:1 top:-1 right:1 bottom:1">
            <att.Rows>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
              <CellOption>composeType:MinSize</CellOption>
            </att.Rows>
            <att.Columns>
              <CellOption>composeType:Percentage percentage:1.0</CellOption>
            </att.Columns>

            <Cell ref.Name="container" Site="row:0 column:0"/>
            <Cell Site="row:1 column:0">
              <SolidLabel Text-bind="self.Text" Font-bind="self.Font" Color="#FFFFFF" VerticalAlignment="Center"/>
              <Bounds AlignmentToParent="left:0 top:0 right:0 bottom:0">
                <SolidBackground Color="#007ACC"/>
              </Bounds>
            </Cell>
          </Table>
        </RibbonGroupTemplate>
      </Instance>
    </Instance>
  </Folder>
</Resource>