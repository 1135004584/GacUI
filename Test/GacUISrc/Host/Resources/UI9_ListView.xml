<Resource>
  <Instance name="MainWindowResource">
    <Instance ref.Class="demo::MainWindow">
      <Window Text="MainWindow" ClientSize="x:640 y:480">
        <att.BoundsComposition-set PreferredMinSize="x:640 y:480"/>

        <Table AlignmentToParent="left:0 top:0 right:0 bottom:0" CellPadding="5">
          <att.Rows>
            <_>composeType:MinSize</_>
            <_>composeType:Percentage percentage:1.0</_>
          </att.Rows>
          <att.Columns>
            <_>composeType:Absolute absolute:100</_>
            <_>composeType:Percentage percentage:1.0</_>
          </att.Columns>

          <Cell Site="row:0 column:0">
            <ComboBox ref.Name="comboBox" SelectedIndex="5" ev.SelectedIndexChanged="comboBox_SelectedIndexChanged">
              <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>
              <att.ListControl>
                <TextList HorizontalAlwaysVisible="false" VerticalAlwaysVisible="false">
                  <att.Items>
                    <_ Text="BigIcon"/>
                    <_ Text="SmallIcon"/>
                    <_ Text="List"/>
                    <_ Text="Tile"/>
                    <_ Text="Information"/>
                    <_ Text="Detail"/>
                  </att.Items>
                </TextList>
              </att.ListControl>
            </ComboBox>
          </Cell>

          <Cell Site="row:1 column:0 columnSpan:2">
            <ListView ref.Name="listView" View="Detail" VerticalAlwaysVisible="false" HorizontalAlwaysVisible="false">
              <att.BoundsComposition-set AlignmentToParent="left:0 top:0 right:0 bottom:0"/>

              <att.Columns>
                <_ Text="Name"/>
                <_ Text="Owner"/>
                <_ Text="Languages"/>
                <_ Text="Ranking"/>
              </att.Columns>

              <att.DataColumns>
                <_>0</_>
                <_>1</_>
                <_>2</_>
              </att.DataColumns>

              <att.Items>
                <_ Text="Visual Studio">
                  <att.SubItems>
                    <_>Microsoft</_>
                    <_>C++, C#, VB.NET, F#, JavaScript, Python</_>
                    <_>1</_>
                  </att.SubItems>
                </_>
                <_ Text="Borland Delphi Studio">
                  <att.SubItems>
                    <_>Borland</_>
                    <_>Object Pascal, C++, C#, VB.NET</_>
                    <_>2</_>
                  </att.SubItems>
                </_>
                <_ Text="JetBrains Clion">
                  <att.SubItems>
                    <_>JetBrains</_>
                    <_>C++</_>
                    <_>3</_>
                  </att.SubItems>
                </_>
              </att.Items>
            </ListView>
          </Cell>
        </Table>
      </Window>
    </Instance>
  </Instance>
</Resource>